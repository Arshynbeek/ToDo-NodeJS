<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("components/head.ejs")%>

    <title>New</title>
  </head>

  <body>
    
    <div class="container mt-3">
      <a href="/"><button class="btn btn-secondary mb-3">Go Back</button></a>
      <h2>Add a task</h2>

      <form action="/new" method="POST">
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Name of task</label>
          <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name of task" name="title">
        </div>
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">Task description</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Add task</button>
      </form>
    </div>
    
  </body>
</html>